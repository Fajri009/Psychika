<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:paddingBottom="20dp"
    android:background="@drawable/pop_up_background">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_close"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/close" />

    <LinearLayout
        android:id="@+id/layout_take_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_close">

        <ImageView
            android:id="@+id/iv_camera"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:contentDescription="@string/take_photo"
            android:src="@drawable/ic_camera" />

        <TextView
            android:id="@+id/tv_take_photo"
            style="@style/TextAppearance.AppCompat.TextMd.Medium"
            android:layout_width="wrap_content"
            android:text="@string/take_photo"
            android:textColor="@color/primary_800"
            android:layout_marginStart="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_choose_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/layout_take_photo"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/iv_gallery"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_gallery"
            android:contentDescription="@string/choose_gallery"/>

        <TextView
            android:id="@+id/tv_gallery"
            style="@style/TextAppearance.AppCompat.TextMd.Medium"
            android:layout_width="wrap_content"
            android:text="@string/choose_gallery"
            android:textColor="@color/primary_800"
            android:layout_marginStart="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_delete_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_choose_gallery"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_trash"
            android:contentDescription="@string/delete_photo" />

        <TextView
            android:id="@+id/tv_delete"
            style="@style/TextAppearance.AppCompat.TextMd.Medium"
            android:layout_width="wrap_content"
            android:text="@string/delete_photo"
            android:textColor="@color/error_700"
            android:layout_marginStart="15dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>