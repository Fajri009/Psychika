<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/shades_50"
    tools:context=".ui.profile.displayprofile.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_700">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/bubble_background"
            android:scaleType="fitXY"
            android:src="@drawable/bubble_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_profile"
            style="@style/TextAppearance.AppCompat.DisplayXs.Semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/profile"
            android:textColor="@color/shades_50"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profile_picture"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/profile_avatar"
            app:civ_border_color="@color/shades_50"
            app:civ_border_width="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_profile" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/white_container"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="50dp"
            android:paddingBottom="100dp"
            app:layout_constraintTop_toBottomOf="@id/iv_profile_picture">

            <LinearLayout
                android:id="@+id/layout_user_fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_name"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="20dp"
                    android:contentDescription="@string/icon_fullname"
                    android:src="@drawable/ic_nav_profile"
                    app:tint="@color/primary_700" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/TextAppearance.AppCompat.TextSm.Medium"
                        android:layout_width="wrap_content"
                        android:text="@string/fullname"
                        android:textColor="@color/primary_800" />

                    <TextView
                        android:id="@+id/tv_user_fullname"
                        style="@style/TextAppearance.AppCompat.TextMd.Medium"
                        android:layout_width="wrap_content"
                        android:text="@string/user_fullname"
                        android:textColor="@color/neutral_700" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_email"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="20dp"
                    android:contentDescription="@string/icon_email"
                    android:src="@drawable/ic_email"
                    app:tint="@color/primary_700" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_email"
                        style="@style/TextAppearance.AppCompat.TextSm.Medium"
                        android:layout_width="wrap_content"
                        android:text="@string/email"
                        android:textColor="@color/primary_800" />

                    <TextView
                        android:id="@+id/tv_user_email"
                        style="@style/TextAppearance.AppCompat.TextMd.Medium"
                        android:layout_width="wrap_content"
                        android:text="@string/user_email"
                        android:textColor="@color/neutral_700" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_user_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_phone"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="20dp"
                    android:contentDescription="@string/icon_phone"
                    android:src="@drawable/ic_phone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_user_email"
                    app:tint="@color/primary_700" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="@id/iv_phone"
                    app:layout_constraintStart_toEndOf="@id/iv_phone"
                    app:layout_constraintTop_toTopOf="@id/iv_phone">

                    <TextView
                        android:id="@+id/tv_phone"
                        style="@style/TextAppearance.AppCompat.TextSm.Medium"
                        android:layout_width="wrap_content"
                        android:text="@string/phone"
                        android:textColor="@color/primary_800" />

                    <TextView
                        android:id="@+id/tv_user_phone"
                        style="@style/TextAppearance.AppCompat.TextMd.Medium"
                        android:layout_width="wrap_content"
                        android:text="@string/user_phone"
                        android:textColor="@color/neutral_700" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">

                <Button
                    android:id="@+id/btn_edit_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@drawable/custom_button"
                    android:layout_marginEnd="5dp"
                    android:text="@string/edit_profile" />

                <com.example.psychika.ui.custom.LogoutButton
                    android:id="@+id/btn_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginStart="5dp"
                    android:text="@string/logout" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>