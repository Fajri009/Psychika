<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:paddingBottom="20dp"
    android:background="@drawable/pop_up_background">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_close"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/close" />

    <ImageView
        android:id="@+id/iv_illust_history"
        android:layout_width="180dp"
        android:layout_height="195dp"
        android:src="@drawable/illust_history"
        android:contentDescription="@string/illust_mental_health"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_close" />

    <TextView
        android:id="@+id/tv_mental_health"
        style="@style/TextAppearance.AppCompat.TextLg.Semibold"
        android:layout_width="wrap_content"
        android:text="@string/mental_health"
        android:textColor="@color/secondary_900"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_illust_history"
        app:layout_constraintStart_toStartOf="@+id/iv_illust_history"
        app:layout_constraintTop_toBottomOf="@+id/iv_illust_history" />

    <TextView
        android:id="@+id/tv_advice"
        style="@style/TextAppearance.AppCompat.TextXs.Regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/high_mental_health"
        android:textColor="@color/neutral_800"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/iv_illust_history"
        app:layout_constraintStart_toStartOf="@+id/iv_illust_history"
        app:layout_constraintTop_toBottomOf="@+id/tv_mental_health" />
</androidx.constraintlayout.widget.ConstraintLayout>